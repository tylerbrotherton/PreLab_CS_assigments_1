#include <stdio.h>

//marco foreach loop
#define foreach(_type,_var,_arr)
    _type *_var= _var; \
    for(int _c, = 0; _c <_elem_count; _c++, (_var= _arr+_c))


#define ARRAY_SIZE 20


int main(){
    int values[ARRAY_SIZE]={0};

    foreach(int *i, values) {
        *i = (*i - values) + 1;
    }    

    {   
        int sum=0;
        foreach(int *i, values){
            sum+=*i;
        }
        printf("the total is %d\n", sum );
        printf("The Average is %d\n", (sum*1.0)/ARRAY_SIZE);
    }
}
